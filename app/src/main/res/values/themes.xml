<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Weather" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Weather" parent="Base.Theme.Weather" />

    <style name="SearchBar" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">#00000000</item>
    </style>

    <style name="Theme.Weather.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Weather.AppWidgetContainer" parent="Theme.Weather.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">0dp</item>
    </style>
</resources>